{
  "name": "kanban-vscode",
  "displayName": "Kanban Dashboard",
  "description": "File-based SDLC kanban board for the AIFactory ecosystem",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "publisher": "aifactory",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "workspaceContains:.kanban/board.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      { "command": "kanban.openBoard", "title": "Kanban: Open Board" },
      { "command": "kanban.initBoard", "title": "Kanban: Initialize Board" },
      { "command": "kanban.addCard", "title": "Kanban: Add Card" },
      { "command": "kanban.refreshBoard", "title": "Kanban: Refresh Board" }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kanban",
          "title": "Kanban",
          "icon": "$(project)"
        }
      ]
    },
    "views": {
      "kanban": [
        {
          "type": "webview",
          "id": "kanban.boardView",
          "name": "Board"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@kanban/core": "*"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "typescript": "^5.7.0"
  }
}
